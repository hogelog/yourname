  <h2 class="ui header">
    <%= user[:google][:info][:email] %>
  </h2>

  <div class="ui doubling cards">
    <div class="ui card">
      <div class="extra content">Google</div>
      <div class="content">
        <img class="floated right mini ui image" src="<%= user[:google][:info][:image] %>">
        <div class="header">
          <%= user[:google][:info][:name] %>
        </div>
        <div class="meta">
          <%= user[:google][:info][:email] %>
        </div>
      </div>
      <% if @debug %>
        <div class="content">
          <pre><%= h user[:google].pretty_inspect %></pre>
        </div>
      <% end %>
    </div>

    <% if GITHUB_ENABLED %>
      <div class="ui card">
        <div class="extra content">GitHub</div>
        <div class="content">
          <% if user[:github] %>
            <img class="floated right mini ui image" src="<%= user[:github][:info][:image] %>">
            <div class="header">
              <%= user[:github][:info][:nickname] %>
            </div>
            <div class="meta">
              <%= user[:github][:info][:email] %>
            </div>
            <div class="extra content">
              <% github_url = "https://github.com/#{ user[:github][:info][:nickname] }" %>
              <a href="<%= github_url %>"><%= h github_url %></a>
            </div>
          <% else %>
            <form action="/auth/github" method="post">
              <%= authenticity_token_tag %>
              <input class="ui button" type="submit" value="Connect to GitHub">
            </form>
          <% end %>
        </div>
        <% if @debug %>
          <div class="content">
            <pre><%= h user[:github].pretty_inspect %></pre>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if SLACK_ENABLED %>
      <div class="ui card">
        <div class="extra content">Slack</div>
        <div class="content">
          <% if user[:slack] %>
            <img class="floated right mini ui image" src="<%= user[:slack][:info][:image] %>">
            <div class="header">
              <%= user[:slack][:info][:name] %>
            </div>
            <div class="meta">
              <%= user[:slack][:info][:email] %>
            </div>
          <% else %>
            <form action="/auth/slack" method="post">
              <%= authenticity_token_tag %>
              <input class="ui button" type="submit" value="Connect to Slack">
            </form>
          <% end %>
        </div>
        <% if @debug %>
          <div class="content">
            <pre><%= h user[:slack].pretty_inspect %></pre>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if ESA_ENABLED %>
      <div class="ui card">
        <div class="extra content">esa</div>
        <div class="content">
          <% if user[:esa] %>
            <img class="floated right mini ui image" src="<%= user[:esa][:info][:image] %>">
            <div class="header">
              <%= user[:esa][:info][:nickname] %>
            </div>
            <div class="meta">
              <%= user[:esa][:info][:email] %>
            </div>
          <% else %>
            <form action="/auth/esa" method="post">
              <%= authenticity_token_tag %>
              <input class="ui button" type="submit" value="Connect to esa">
            </form>
          <% end %>
        </div>
        <% if @debug %>
          <div class="content">
            <pre><%= h user[:esa].pretty_inspect %></pre>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
